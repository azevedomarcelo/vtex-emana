{
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "tab",
    "indentWidth": 1,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "ignore": [
      "checkout/*.js",
      "checkout-ui-settings/*js"
    ],
    "rules": {
      "suspicious": {
        "noDebugger": "off",
        "noConsoleLog": "warn",
        "noExplicitAny": "warn",
        "noDoubleEquals": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noChildrenProp": "off"
      },
      "style": {
        "noShoutyConstants": "warn",
        "useNamingConvention": "error",
        "useImportType": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  }
}